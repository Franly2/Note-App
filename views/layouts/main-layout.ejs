<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Notes</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="style.css" />
  </head>
  <body id="parent-element" class="bg-dark overflow-x-hidden">
    <%- include("navbar.ejs") %>
    <div class="d-grid gap-2 px-4" style="margin-top: 80px">
      <button
        class="btn btn-warning form-trigger"
        type="button"
        data-bs-toggle="modal"
        data-bs-target="#exampleModal"
      >
        Add new note
      </button>
      <!-- modal -->
      <div
        class="modal fade modal-fullscreen-md-down modal-xl"
        id="exampleModal"
        tabindex="-1"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Add Note</h1>

              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <form method="post" action="/submit">
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label"
                    >Title</label
                  >
                  <input
                    type="text"
                    class="form-control clear"
                    name="title"
                    id="exampleInputEmail1 title"
                    aria-describedby="emailHelp"
                  />
                </div>
                <div class="mb-3">
                  <div class="form-floating">
                    <textarea
                      class="form-control clear"
                      placeholder="Leave a comment here"
                      id="floatingTextarea2 content"
                      name="content"
                      style="height: 100px"
                    ></textarea>
                    <label for="floatingTextarea2">Note</label>
                  </div>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
                <button
                  type="submit"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >
                  Close
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row row-cols-1 row-cols-md-5 g-4 p-5"><%- body %></div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>

    <!-- ! ---------------------------------------------------------------------------------------------- -->
    <script>
      const form_button = document.querySelector(".form-trigger");
      const content_area = document.querySelectorAll(".clear");
      form_button.addEventListener("click", () => {
        // content_area.value = "";
        content_area.forEach((area) => {
          area.value = "";
        });
      });
    </script>
  </body>
</html>
